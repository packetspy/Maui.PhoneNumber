<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui.PhoneNumber.MainPage">

    <VerticalStackLayout Spacing="15" Padding="20">
        <Label Text="Enter Phone number" FontSize="20"/>
        <Entry x:Name="PhoneNumberText" Text="1-555-NETMAUI" />
        <Button x:Name="TranslateButton" Text="Translate" Clicked="OnTranslate_Clicked" />
        <Button x:Name="CallButton" Text="Call" Clicked="OnCall_Clicked" IsEnabled="False" />
    </VerticalStackLayout>

</ContentPage>
